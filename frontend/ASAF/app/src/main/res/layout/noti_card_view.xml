<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/fragment_student_noti_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_style">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/sender_profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/asaf_real_logo" />
                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noti_card_registerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5분전" />

                <TextView
                    android:id="@+id/noti_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9시 까지 출석 체크 하세요"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/hiddenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_background"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/noti_card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘은 싸피데이가 있는 날입니다.
모두들 빠르게 출석체크를 하고 자리에 착석해주시기 바랍니다.
아아아아ㅏ아아"
                android:minHeight="100dp"
                />

        </LinearLayout>


    </LinearLayout>




</com.google.android.material.card.MaterialCardView>

