        android:id="@+id/seat_add"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자리추가"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/seat_random"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <EditText
        android:id="@+id/seat_number_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:hint="숫자입력"
        android:inputType="number"
        android:textColorHint="@color/grey"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/seat_add"
        app:layout_constraintEnd_toEndOf="@+id/seat_add"
        app:layout_constraintStart_toStartOf="@+id/seat_add"
        app:layout_constraintTop_toTopOf="@+id/seat_add" />

