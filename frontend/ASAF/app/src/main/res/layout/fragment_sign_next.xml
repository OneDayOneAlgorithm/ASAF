<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign.SignNextFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/fragment_sign_next_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교육 지원금 서명"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="10dp"
        android:id="@+id/fragment_sign_next_linearFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_next_textview_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/fragment_sign_next_textview_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="몇월 교육 지원금 인가요?"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.d103.asaf.common.component.Dropdown
            android:id="@+id/fragment_sign_next_dropdown_first"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="9dp"
        android:id="@+id/fragment_sign_next_linearSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="-100dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_sign_next_linearFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/fragment_sign_next_textview_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 수업일"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.d103.asaf.common.component.Dropdown
            android:id="@+id/fragment_sign_next_dropdown_second"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="8dp"
        android:id="@+id/fragment_sign_next_linearThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-100dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_sign_next_linearSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/fragment_sign_next_textview_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 출석일"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.d103.asaf.common.component.Dropdown
            android:id="@+id/fragment_sign_next_dropdown_third"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="7dp"
        android:id="@+id/fragment_sign_next_linearFourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-100dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_sign_next_linearThird"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_weight="3"
            android:id="@+id/fragment_sign_next_textview_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제출 월/일"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.d103.asaf.common.component.Dropdown
            android:id="@+id/fragment_sign_next_dropdown_fourth_month"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <com.d103.asaf.common.component.Dropdown
            android:id="@+id/fragment_sign_next_dropdown_fourth_day"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/uploadSignBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/bookDraw"
        android:text="문서확인"
        android:textSize="30sp"
        app:cornerRadius="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_next_linearFourth" />

</androidx.constraintlayout.widget.ConstraintLayout>