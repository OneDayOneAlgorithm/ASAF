    <com.google.android.material.button.MaterialButton
        android:id="@+id/seat_random_part"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자리끼리 바꾸기"
        android:backgroundTint="@color/bookReturn"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="36sp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/seat_random_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seat_random_all"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모두 바꾸기"
        android:textColor="@color/white"
        android:backgroundTint="@color/bookDraw"
        android:visibility="invisible"
        android:layout_marginBottom="50dp"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seat_random_part" />

